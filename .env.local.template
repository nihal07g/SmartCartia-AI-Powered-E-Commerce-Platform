# SmartCartia E-Commerce Platform Environment Configuration
# Copy this file to .env.local and update with your values

# ========================
# Server Configuration
# ========================
FRONTEND_PORT=3000
BACKEND_PORT=3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# ========================
# Database Configuration
# ========================
# PostgreSQL Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smartcartia_db
DB_USER=smartcartia_user
DB_PASSWORD=smartcartia_password

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=60000

# SSL Configuration (for production)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# ========================
# AI Configuration
# ========================
# Large Language Model API Settings
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=advanced-llm-model
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Alternative AI Provider Settings
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here
# GOOGLE_AI_API_KEY=your_google_ai_key_here

# ========================
# Security Configuration
# ========================
# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Password Hashing
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ========================
# Email Configuration
# ========================
# SMTP Settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email Templates
FROM_EMAIL=noreply@smartcartia.com
FROM_NAME=SmartCartia Team

# ========================
# Payment Gateway
# ========================
# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Razorpay Configuration (for Indian market)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# ========================
# File Upload & Storage
# ========================
# Local Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smartcartia-assets

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ========================
# Analytics & Monitoring
# ========================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Application Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key
NEW_RELIC_APP_NAME=SmartCartia-Production

# ========================
# Cache Configuration
# ========================
# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_TTL=3600

# Memory Cache
CACHE_ENABLED=true
CACHE_TTL=1800

# ========================
# Environment Settings
# ========================
NODE_ENV=development
LOG_LEVEL=debug
DEBUG=smartcartia:*

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================
# Social Media Integration
# ========================
# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ========================
# Search & Indexing
# ========================
# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=smartcartia_products

# Algolia Search
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key
ALGOLIA_INDEX_NAME=smartcartia_search

# ========================
# Notification Services
# ========================
# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=admin@smartcartia.com

# SMS Gateway
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ========================
# Development Tools
# ========================
# Python ML Configuration
PYTHON_EXECUTABLE=python
PYTHON_ML_PATH=./ml

# Seed Data Configuration
SEED_DATA_ENABLED=true
SEED_ADMIN_EMAIL=admin@smartcartia.com
SEED_ADMIN_PASSWORD=secure_admin_password

# ========================
# Production Overrides
# ========================
# Set these in production environment
# NODE_ENV=production
# DB_SSL=true
# CORS_ORIGIN=https://yourdomain.com
# SESSION_SECURE=true
# RATE_LIMIT_STRICT=true